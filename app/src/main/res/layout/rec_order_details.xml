<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp"

    android:elevation="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >


        <ImageView
            android:id="@+id/meal_image"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:src="@drawable/hot_burger"
            android:layout_margin="15dp"
            android:background="@drawable/rec_btn_price" />

        <TextView
            android:id="@+id/meal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/meal_image"
            android:text="Kgfggghfgfgfgg:"
            android:textColor="@color/color_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantity"
            android:layout_below="@+id/meal_image"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/color_text"/>






        <TextView
            android:id="@+id/meal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/meal_Title"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/meal_Desc"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rec_btn_signup"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingEnd="30dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="70dp"
            android:text="20$"
            android:textColor="@color/wight"
            android:textSize="14sp"
            android:textStyle="bold"
             />







    </RelativeLayout>


</androidx.cardview.widget.CardView>