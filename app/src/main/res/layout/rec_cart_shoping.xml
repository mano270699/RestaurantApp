<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"

    android:elevation="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <ImageView
            android:id="@+id/meal_image"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:src="@drawable/hot_burger"
            android:layout_margin="15dp"
            android:background="@drawable/rec_btn_price" />

        <TextView
            android:id="@+id/tvDesc"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="10dp"
            android:text="@string/description"
            android:textColor="@color/color_text"
            android:textSize="20dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/meal_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDesc"

            android:layout_marginStart="115dp"
            android:layout_marginTop="10dp"
            android:text="@string/some_text"
            android:textColor="@color/t_color"
            android:textSize="14dp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/meal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/meal_Title"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/meal_Desc"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rec_btn_price"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingEnd="30dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="110dp"
            android:text="20$"
            android:textColor="@color/color_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/split1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/meal_price"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/t_color"

            />

            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite_border"
                android:layout_below="@+id/split1"
                android:visibility="visible"
                android:layout_marginStart="20dp"/>
        <ImageView
            android:id="@+id/iv_favSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favorite_full"
            android:layout_below="@+id/split1"
            android:visibility="invisible"
            android:layout_marginStart="20dp"

            />

        <ImageView
                android:id="@+id/iv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:layout_below="@+id/split1"
                android:layout_toEndOf="@+id/iv_fav"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/iv_min"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/minus"
                android:layout_below="@+id/split1"
                android:layout_toStartOf="@+id/tvnum"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/tvnum"
                android:layout_width="wrap_content"
                android:text="12"
                android:layout_height="wrap_content"
                android:layout_below="@+id/split1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/iv_plus"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                android:layout_below="@+id/split1"
                android:layout_alignParentEnd="true"

                android:layout_marginEnd="20dp"/>





    </RelativeLayout>


</androidx.cardview.widget.CardView>