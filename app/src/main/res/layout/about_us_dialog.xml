<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/card_delivery_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        app:contentPadding="15dp"

        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"


    >

        <ImageView
            android:id="@+id/image_del"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/me"

            />

        <TextView
        android:id="@+id/tv_thanks"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/image_del"
    android:layout_centerHorizontal="true"
    android:text="@string/myname"
    android:textColor="@color/color_text"
    android:textStyle="bold"
    android:textSize="24sp"
    android:layout_marginTop="5dp"

    />
    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_thanks"
        android:layout_centerHorizontal="true"
        android:text="@string/the_app_developer"
        android:textColor="@color/color_text"
        android:layout_marginTop="5dp"

        />
    <TextView
        android:id="@+id/tv_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order"
        android:layout_centerHorizontal="true"
        android:text="https://www.facebook.com/Ahmano99 "
        android:textColor="@color/color_text"
        android:autoLink="email"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ifb"
        android:drawablePadding="7dp"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_facebook"
        android:layout_centerHorizontal="true"
        android:text="01069103550"
        android:textColor="@color/color_text"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/phonesm"
        android:drawablePadding="7dp"
        android:autoLink="phone"


        />

</RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>